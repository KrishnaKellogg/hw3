<h1>New Post</h1>

<%= form_with :model => @post do |form| %>
  <p>
  <%# add form fields %>
    <%= form.label "title" %>
    <%= form.text_field "title" %>
    <%= form.label "description" %>
    <%= form.text_field "description" %>
    <%= form.label "posted_on" %>
    <%= form.text_field "posted_on" %>
  </p>
  <%= form.submit %>
<% end %>